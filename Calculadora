    }                                         

    private void jButton18ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        limpar(); //Essa operação é para limpar o campo “texto” caso o último botão a ser pressionado seja o de uma operação
        jTextField1.setText(removeLastChar(jTextField1.getText()));
    }                                         

