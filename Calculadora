public class JFrameCalculadora extends javax.swing.JFrame {
    
    private double valor1;
    private double valor2;
    private double result;
    private Operacao operacao;
    private boolean limpar;
    
    public void operar(){
        switch (operacao){
            case SOMA -> result = valor1 + valor2;
            case SUBTRACAO -> result = valor1 - valor2;
            case MULTIPLICA -> result = valor1 * valor2;
            case DIVIDE -> result = valor1 / valor2;
            case EXP -> result = Math.pow(valor1,valor2);
            case RAIZ -> result = Math.pow(valor1, (1/valor2));
        }
        jTextField1.setText(String.valueOf(result));
        limpar = true;
    }
    
    public void limpar(){
        if (limpar){
            jTextField1.setText("");
            limpar = false;
        }
    }
    
    public String removeLastChar(String s) {
    return (s == null || s.length() == 0)
      ? null 
      : (s.substring(0, s.length() - 1));
}
    
